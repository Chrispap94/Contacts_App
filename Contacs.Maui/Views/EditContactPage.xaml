<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contacs.Maui.Views.EditContactPage"
             Title="Edit Contact">
    <VerticalStackLayout Spacing="10" Margin="20,10,20,0">
        <Frame Padding="10,2,10,2">
            <HorizontalStackLayout>
                <Label Text="Name" VerticalOptions="Center" WidthRequest="60"></Label>
                <Entry x:Name="entryName"  VerticalOptions="Center"></Entry>
            </HorizontalStackLayout>
        </Frame>
        <Frame Padding="10,2,10,2">
            <HorizontalStackLayout>
                <Label Text="Email" VerticalOptions="Center" WidthRequest="60"></Label>
                <Entry x:Name="entryEmail"  VerticalOptions="Center"></Entry>
            </HorizontalStackLayout>
        </Frame>
        <Label 
            x:Name="lblname"
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button x:Name="Update_btn" Text="update" Clicked="Update_btn_Clicked"></Button>
        <Button x:Name="Cancel_btn" Text="cancel" Clicked="Cancel_btn_Clicked"></Button>
    </VerticalStackLayout>
</ContentPage>